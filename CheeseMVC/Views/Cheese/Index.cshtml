@{
    
}

<h1> My Cheese </h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (ViewBag.cheeses.Count == 0)
{
    <p>No cheeses yet!</p>
}

    <table border="1" cellpadding="5">
        @foreach (KeyValuePair<string, string> cheese in ViewBag.cheeses)
         {
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
             </tr>
             </thead>
            <tbody>
                <tr>
                    <td>@cheese.Key</td>
                    <td>@cheese.Value</td>
                </tr>
            </tbody>
        }
    </table>
